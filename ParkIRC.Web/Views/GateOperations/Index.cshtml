@model IEnumerable<ParkIRC.Models.EntryGate>

@{
    ViewData["Title"] = "Gate Operations";
}

<div class="container-fluid mt-4">
    <h2 class="mb-4">Gate Operations</h2>

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Gate
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Location</th>
                            <th>Status</th>
                            <th>Camera</th>
                            <th>Printer</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var gate in Model)
                        {
                            <tr>
                                <td>@gate.Name</td>
                                <td>@gate.Location</td>
                                <td>
                                    <span class="badge @(gate.IsActive ? "bg-success" : "bg-danger")">
                                        @(gate.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>@(gate.Camera?.Name ?? "Not assigned")</td>
                                <td>@(gate.Printer?.Name ?? "Not assigned")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@gate.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@gate.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
