@model ParkIRC.Web.Models.SiteSettings

@{
    ViewData["Title"] = "Settings";
}

<div class="container-fluid mt-4">
    <h2 class="mb-4">System Settings</h2>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Index" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="SiteName" class="form-label"></label>
                                    <input asp-for="SiteName" class="form-control" />
                                    <span asp-validation-for="SiteName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ShowLogo" class="form-label"></label>
                                    <div class="form-check">
                                        <input asp-for="ShowLogo" class="form-check-input" />
                                        <label class="form-check-label" asp-for="ShowLogo"></label>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Theme" class="form-label"></label>
                                    <select asp-for="Theme" class="form-select">
                                        <option value="light">Light</option>
                                        <option value="dark">Dark</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CurrencySymbol" class="form-label"></label>
                                    <input asp-for="CurrencySymbol" class="form-control" />
                                    <span asp-validation-for="CurrencySymbol" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TimeFormat" class="form-label"></label>
                                    <input asp-for="TimeFormat" class="form-control" />
                                    <span asp-validation-for="TimeFormat" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="DateFormat" class="form-label"></label>
                                    <input asp-for="DateFormat" class="form-control" />
                                    <span asp-validation-for="DateFormat" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="LogoUrl" class="form-label"></label>
                                    <input asp-for="LogoUrl" class="form-control" type="file" accept="image/*" />
                                    <span asp-validation-for="LogoUrl" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Settings
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
