@model ParkIRC.Data.Models.Rate

@{
    ViewData["Title"] = "Tambah Tarif Baru";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-plus-circle me-2"></i>Tambah Tarif Parkir Baru</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="VehicleType" class="control-label">Jenis Kendaraan</label>
                            <select asp-for="VehicleType" class="form-control">
                                <option value="car">Mobil</option>
                                <option value="motorcycle">Motor</option>
                                <option value="truck">Truk</option>
                            </select>
                            <span asp-validation-for="VehicleType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Status</label>
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                <label class="form-check-label">
                                    Aktif
                                </label>
                            </div>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="BaseFee" class="control-label">Tarif Dasar</label>
                            <div class="input-group">
                                <span class="input-group-text">Rp</span>
                                <input asp-for="BaseFee" class="form-control" />
                            </div>
                            <span asp-validation-for="BaseFee" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="HourlyRate" class="control-label">Tarif per Jam</label>
                            <div class="input-group">
                                <span class="input-group-text">Rp</span>
                                <input asp-for="HourlyRate" class="form-control" />
                            </div>
                            <span asp-validation-for="HourlyRate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="DailyRate" class="control-label">Tarif Harian</label>
                            <div class="input-group">
                                <span class="input-group-text">Rp</span>
                                <input asp-for="DailyRate" class="form-control" />
                            </div>
                            <span asp-validation-for="DailyRate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="MonthlyRate" class="control-label">Tarif Bulanan</label>
                            <div class="input-group">
                                <span class="input-group-text">Rp</span>
                                <input asp-for="MonthlyRate" class="form-control" />
                            </div>
                            <span asp-validation-for="MonthlyRate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Simpan
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Kembali
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}